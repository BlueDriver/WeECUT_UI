/* pages/courseSearch/courseSearch.wxss */
@import '../login/login.wxss';
@import '../jobList/jobList.wxss';

page {
  color: #fff;
}

.option-box {
  display: flex;
  flex-flow: row nowrap;
  margin: 0vw 0vw 0vw 4vw;
}

.option-item {
  background-color: #555;
  font-size: 5vw;
  line-height: 5vw;
  width: 1%;
  padding: 4vw 2vw;
  flex-grow: 1;
  text-align: center;
  overflow: hidden;
  /* text-overflow: ellipsis;  */
  white-space: nowrap;
}

.option-now {
  text-overflow: ellipsis;
  /* color: #317dd5; */
  background-color: #317dd5;
}

.option-active {
  background-color: #317dd5;
}

input {
  padding: 0px;
  margin: 0px;
}

.option-input {
  height: 5vw;
  font-size: 5vw;
  line-height: 5vw;
  padding: 1vw;
  border-bottom: 1rpx solid #317dd5;
  min-height: 5vw;
  /* background: pink;   */
}

.item {
  display: flex;
  flex-flow: row nowrap;
   margin-bottom: 2vw; 
  /* background-color: blue; */
}

.item-index {
  height: 10vw;
  font-size: 6vw;
  line-height: 6vw;
  padding: 2vw 0vw;
  width: 37vw;
  transform: rotate(90deg);
  transform-origin: 13.5% 50%;
}

.item-left {
  /* background-color: yellow; */
}

.item-right {
  margin-left: -25vw;
  margin-bottom: -2vw;
  /* background-color: pink; */
  display: flex;
  flex-flow: row wrap;
  align-items: flex-start;
  min-height: 39vw;
  align-content: flex-start;
}

.info-title {
  background-color: #317dd5;
  font-size: 8vw;
  line-height: 8vw;
  padding: 1vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* flex-grow: 1; */
  width: 80vw;
  /* width: 1%;  */
  margin-bottom: 2vw;
}

.info-detail {
  margin-bottom: 2vw;
  margin-right: 2vw;
  background-color: yellow;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  font-size: 5vw;
  line-height: 5vw;
  padding: 1vw;
  max-width: 80vw;
}




/** same as jobList **/
/** just add 0 at the tail, for academy list show **/
.item0 {
  display: flex;
  flex-flow: row wrap;
  margin-bottom: 1vw;
}

.item-index0 {
  background-color: #3e3f3a;
  color: #fff;
  font-size: 6vw;
  width: 14vw;
  height: 14vw;
  line-height: 6vw;
  padding: 4vw 0vw;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item-title0 {
    /* background-color: blue;   */
  font-size: 6vw;
  line-height: 6vw;
  padding: 4vw 2vw;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 62vw;
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 100;
  background-color: #317dd5;
  opacity: 0.3;
}

.ac-box{
  position: fixed;
  bottom: 0vw;
  height: 100vh;
  overflow: scroll;
  background-color: #555555;
  padding: 4vw 0vw 4vw 4vw;
  margin-left: 20vw;
  z-index: 10087;
}